<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.config.GuestMapper">
    
    <!-- 사원 저장 -->
   <insert id="save" parameterType="GuestDTO">
      insert into tb_guest(guest_pno,m_count,guest_name,stay_days,parking_yn,room_no)
      values( #{guest_pno},1, #{guest_name}, 7698, "1",#{room_no})
   </insert>
   
   <!--전체 조회 -->
   <select id="findAll" resultType="GuestDTO">
      select GUEST_PNO, 
             m_count, 
             guest_name, 
             stay_days, 
             car_no,
             room_no
             
      from tb_guest
      order by room_no
   </select>
   
   <select id="findAllGuest" resultType="com.dto.GuestDTO">
      select guest_pno, 
             m_count, 
             guest_name,
             stay_days,
             car_no,
             room_no
      from tb_guest
   </select>
	
	<select id="findGuestByPno" parameterType="String" resultType="com.dto.GuestDTO">
      select room_no, 
             guest_pno, 
             m_count, guest_name, stay_days, car_no
      from tb_guest where guest_pno=#{pno}
      order by room_no desc
	</select>
   
