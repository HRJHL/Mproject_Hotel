<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.config.RoomSMapper">
     <!-- 사원 저장 -->
   <insert id="save_S" parameterType="RoomSDTO">
      insert into tb_room_service(breakfast_yn,cleaning_yn,delivery_yn,room_no)
      values( #{breakfast_yn},#{cleaning_yn}, #{delivery_yn},#{room_no})
   </insert>
   
   <delete id="remove_S" parameterType="int" >
      delete from tb_room_service
      where breakfast_yn =#{breakfast_yn}
   </delete>
   
   <!-- 수정 -->
     <update id="update_S" parameterType="RoomSDTO" >
        update tb_room_service
        set breakfast_yn = #{breakfast_yn}
        where room_no=#{room_no}
     </update>
     
   <!--전체 조회 -->
   <select id="find_S" resultType="RoomSDTO">
      select breakfast_yn, 
             cleaning_yn, 
             delivery_yn, 
             room_no
             
      from tb_room_service
      order by room_no desc
   </select>
</mapper>

