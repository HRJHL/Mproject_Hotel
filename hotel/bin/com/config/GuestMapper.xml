<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.config.GuestMapper">
    
    <!-- 사원 저장 -->
   <insert id="save_G" parameterType="GuestDTO">
      insert into tb_guest(guest_pno,m_count,guest_name,stay_days,parking_yn,room_no)
      values( #{guest_pno},1, #{guest_name}, 7698, "1",#{room_no})
   </insert>
   
   <!-- 삭제 -->
   <delete id="remove_G" parameterType="int" >
      delete from tb_guest
      where guest_pno =#{guest_pno}
   </delete>
   
   <!-- 수정 -->
     <update id="update_G" parameterType="GuestDTO" >
        update tb_guest
        set guest_pno = #{guest_pno}, guest_name = #{guest_name}
        where room_no=#{room_no}
     </update>
   
   <!--전체 조회 -->
   <select id="find_G" resultType="GuestDTO">
      select guest_pno, 
             m_count, 
             guest_name, 
             stay_days, 
             parking_yn,
             room_no
             
      from tb_guest
      order by guest_pno desc
   </select>
</mapper>

